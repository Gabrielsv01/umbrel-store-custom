# --- STAGE 1: BUILD ---
# Usa a imagem Node.js padrÃ£o (baseada em Debian)
FROM node:18 AS builder

# Instala as dependÃªncias de sistema para o Chromium (mÃ­nimo necessÃ¡rio no Debian)
WORKDIR /app
RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libcurl4 \
    libgconf-2-4 \
    libnss3 \
    libgbm-dev \
    libxrandr2 \
    xdg-utils \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Copiar e instalar dependÃªncias Node
COPY package*.json ./
COPY tsconfig.json ./
RUN npm ci

# ðŸš¨ CORREÃ‡ÃƒO CRÃTICA DO CACHE: Define o caminho antes de instalar
ENV PUPPETEER_CACHE_DIR=/app/.cache/puppeteer

# Garante que o diretÃ³rio de cache exista
RUN mkdir -p ${PUPPETEER_CACHE_DIR}

# 1. Instala o Puppeteer globalmente para acesso fÃ¡cil ao binÃ¡rio
# 2. Roda o comando de instalaÃ§Ã£o no diretÃ³rio de cache garantido
RUN npm install -g puppeteer && \
    /usr/local/bin/puppeteer install

# Copiar e compilar o cÃ³digo
COPY src/ ./src/
RUN npm run build

# --- STAGE 2: PRODUCTION/RUNTIME ---
FROM node:18-slim AS production

# Reinstala as libs de sistema essenciais na imagem slim
WORKDIR /app
RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libcurl4 \
    libgconf-2-4 \
    libnss3 \
    libgbm1 \
    libxrandr2 \
    xdg-utils \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/*

# InstalaÃ§Ã£o das dependÃªncias Node de produÃ§Ã£o
COPY package*.json ./
RUN npm ci --only=production && npm cache clean --force

# Copiar cÃ³digo compilado e o binÃ¡rio do Chromium baixado
COPY --from=builder /app/dist ./dist

# Garante que o Puppeteer encontre o Chromium que ele mesmo baixou
ENV PUPPETEER_CACHE_DIR=/app/.cache/puppeteer
COPY --from=builder /app/.cache/puppeteer ${PUPPETEER_CACHE_DIR}

EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').request({hostname: 'localhost', port: 3001, path: '/html-body-to-image', method: 'POST', headers: {'Content-Type': 'text/html'}}, res => process.exit(res.statusCode === 200 ? 0 : 1)).end('<html>Test</html>')"

# ðŸŽ¯ CORREÃ‡ÃƒO FINAL: Usa o nome do arquivo compilado corretamente
CMD ["node", "dist/app.js"]